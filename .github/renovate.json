{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "commitMessageLowerCase": "never",
  "extends": [
    ":automergeDisabled",
    "config:recommended",
    ":gitSignOff",
    "group:allNonMajor",
    ":renovatePrefix",
    "schedule:monthly",
    ":semanticCommitTypeAll(chore)",
    ":separateMultipleMajorReleases"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "nuget"
      ],
      "groupName": ".NET deps",
      "groupSlug": "net-deps"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions deps",
      "groupSlug": "gh-actions-deps"
    }
  ],
  "labels": [
    "area/dependencies",
    "bots",
    "kind/chore"
  ]
}
