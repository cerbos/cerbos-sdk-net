<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Version>0.0.3-alpha</Version>
        <TargetFrameworks>netstandard2.0;netstandard2.1;net5.0;net6.0</TargetFrameworks>
        <AssemblyName>Cerbos.Sdk</AssemblyName>
        <PackageId>Cerbos.Sdk</PackageId>
        <Authors>Cerbos</Authors>
        <Company>Cerbos</Company>
        <PackageDescription>.NET SDK for interacting with the Cerbos PDP</PackageDescription>
        <RepositoryUrl>https://github.com/cerbos/cerbos-sdk-net</RepositoryUrl>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Google.Protobuf" Version="3.21.2" />
        <PackageReference Include="Grpc" Version="2.46.3" />
    </ItemGroup>
</Project>
